    procedure btnDeletarMouseLeave(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmTransportadora: TfrmTransportadora;

implementation

{$R *.fmx}

procedure TfrmTransportadora.btnAlterarClick(Sender: TObject);
Var
uUtils : utils;
begin
  uUtils := utils.Create;

  uUtils.mudaCorBotaoEnter(btnAlterar);
  uUtils.Free;
end;

procedure TfrmTransportadora.btnAlterarMouseEnter(Sender: TObject);
Var
uUtils : utils;
begin
  uUtils := utils.Create;

  uUtils.mudaCorBotaoEnter(btnAlterar);
  uUtils.Free;
end;

procedure TfrmTransportadora.btnAlterarMouseLeave(Sender: TObject);
Var
uUtils : utils;
begin
  uUtils := utils.Create;

  uUtils.voltaCorBotaoDegrade(btnAlterar);
  uUtils.Free;
end;

